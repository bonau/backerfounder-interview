<h1>Posts</h1>

<%= paginate @posts %>

<table>
  <thead>
    <tr>
      <th>Weight</th>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th>Comments</th>
      <%# <th colspan="3"></th> %>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.weight.to_i %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
        <td><%= post.subtree_ids.size - 1 %></td>
        <td><%# link_to 'Show', post %></td>
        <td><%# link_to 'Edit', edit_post_path(post) %></td>
        <td><%# link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
