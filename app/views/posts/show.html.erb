<p id="notice"><%= notice %></p>

<div class="upvote">
  <div class="button">
  <%- if @post.liked_by_user?(current_user) %>
    <%= button_to '-', action: 'unvote', method: :post %>
  <%- else %>
    <%= button_to '+', action: 'upvote', method: :post %>
  <%- end %>
  </div>
  <div>
    Upvotes: <%= @post.upvotes.count %>
  </div>
</div>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<hr />

<h4>Comments</h4>

<%= render @post.children %>
<%= render 'comment_form', post: Post.new(parent_id: @post.id) %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
