<p id="notice"><%= notice %></p>

  <%= render partial: 'upvote', locals: {post: @post, user: current_user} %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<hr />
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h4>Comments</h4>
<%= render 'comment_form', post: Post.new(parent_id: @post.id) %>

<%= render @post.children.order(weight: :DESC) %>

